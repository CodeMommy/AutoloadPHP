{
    "name": "codemommy/autoloadphp",
    "type": "library",
    "license": "Apache-2.0",
    "homepage": "http://www.codemommy.com",
    "description": "Automatic load namespaces, classes and files",
    "keywords": [
        "CodeMommy",
        "AutoloadPHP",
        "Autoload",
        "PHP"
    ],
    "support": {
        "issues": "https://github.com/CodeMommy/AutoloadPHP/issues",
        "source": "https://github.com/CodeMommy/AutoloadPHP"
    },
    "authors": [
        {
            "name": "Candison November",
            "role": "Founder",
            "email": "kandisheng@163.com",
            "homepage": "http://www.kandisheng.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "CodeMommy\\AutoloadPHP\\": [
                "interface/",
                "source/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodeMommy\\AutoloadPHP\\Script\\": "script/"
        }
    },
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "CodeMommy/TaskPHP": "*",
        "phpunit/phpunit": "*",
        "phpmd/phpmd": "*",
        "squizlabs/php_codesniffer": "*"
    },
    "scripts": {
        "environment": [
            "composer -V",
            "php -v",
            "php -m"
        ],
        "update-project": [
            "git pull",
            "composer self-update",
            "composer update"
        ],
        "test": [
            "composer phpunit",
            "composer phpcs",
            "composer phpmd"
        ],
        "phpcs": [
            "\"vendor/bin/phpcs\" interface --standard=PSR2",
            "\"vendor/bin/phpcs\" source --standard=PSR2",
            "\"vendor/bin/phpcs\" script --standard=PSR2",
            "\"vendor/bin/phpcs\" test --standard=PSR2"
        ],
        "phpmd": "\"vendor/bin/phpmd\" interface,source,script,test text cleancode,codesize,controversial,design,naming,unusedcode",
        "phpunit": "CodeMommy\\AutoloadPHP\\Script\\PHPUnit::start",
        "clean": "CodeMommy\\AutoloadPHP\\Script\\Clean::start"
    }
}